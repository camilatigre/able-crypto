    "@nestjs/schedule": "^4.0.0",
    "@nestjs/config": "^3.1.1",
    "typeorm": "^0.3.19",
    "pg": "^8.11.3",
    "ws": "^8.16.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
